<% tasks = @task_category.tasks.order(created_at: :desc) %>

<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_task_category_path(@task_category) %> |
<%= link_to 'Back', task_categories_path %>

<%= hidden_field :task_category, :id %>

<div class="task_list">
  <%= render partial: "tasks/new_list_item" %>
  <%= render partial: "tasks/list_item", collection: tasks.select { |task| !task.is_complete} %>
  <%= render partial: "tasks/list_item", collection: tasks.select { |task| task.is_complete} %>
</div>
<div class="clear"></div>
