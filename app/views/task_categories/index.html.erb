<p id="notice"><%= notice %></p>

<h1>Listing Task Categories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Parent category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_categories.each do |task_category| %>
      <tr>
        <td><%= task_category.user_id %></td>
        <td><%= task_category.parent_category_id %></td>
        <td><%= task_category.name %></td>
        <td><%= task_category.description %></td>
        <td><%= task_category.color %></td>
        <td><%= link_to 'Show', task_category %></td>
        <td><%= link_to 'Edit', edit_task_category_path(task_category) %></td>
        <td><%= link_to 'Destroy', task_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

